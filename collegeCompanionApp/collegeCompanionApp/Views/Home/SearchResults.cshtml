@*Model Statement*@
@{
    ViewBag.Title = "SearchResults";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="adjustTop">
    <div class="container">
        <h2>SearchResults</h2>
        <hr />
        @*Razor call for loop to populate these as needed after search*@
        <div class="col-sm-5">
            <div class="panel panel-info">
                <div class="panel-heading text-center">
                    <div class="row">
                        <div class="col-sm-1">
                            <h2>
                                <i class="fa fa-heart-o"></i>@*Need to make this change when file  is Faved*@
                            </h2>
                        </div>
                        <div class="col-sm-offset-0"></div>
                        <div class="col-sm-9">
                            <div class="spaceLeft">
                                <h5 class="ccheader">
                                    University of the College Name @*Replace with Razor Call*@
                                </h5>
                            </div>
                        </div>
                        <div class="col-sm-pull-1">
                            <h2>
                                <i class="fa fa-sticky-note-o"></i> @*Need to make this change when file  is Saved*@
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="panel-body text-primary" style="margin-top:-5%;">
                    <div class="row">
                        <h4 class="text-center">
                            <i class="glyphicon glyphicon-usd"></i>
                            20,000 @*Replace with Razor Call*@
                            /year
                        </h4>
                        <div class="row" style="margin-top:5%;">
                            <div class="col-sm-6">
                                &emsp; State @*Replace with Razor Call*@
                            </div>
                            <div class="col-sm-6">
                                City @*Replace with Razor Call*@
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        &emsp; Degree Being Saught @*Replace with Razor Call*@
                    </div>
                    <div class="row">
                        &emsp; Ownership @*Replace with Razor Call*@
                    </div>
                    <div class="row">
                        &emsp; Accreditor @*Replace with Razor Call*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="footer">
    @*Pagination UI*@
    <nav aria-label="searchResultsPagination">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            @*Populate the number of pages needed from search*@
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

