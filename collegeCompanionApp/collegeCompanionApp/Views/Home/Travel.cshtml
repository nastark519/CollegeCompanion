
@{
    ViewBag.Title = "Travel";
}
<head>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <link type="text/css" rel="stylesheet" href="https://api.mqcdn.com/sdk/mapquest-js/v1.3.1/mapquest.css" />

    <script type="text/javascript">
        window.onload = function () {
            L.mapquest.key = 'ixKJ3EwloGeD24cG7f0hOGf8mLkinAbx';

            var map = L.mapquest.map('map', {
                center: [40.7128, -74.0059],
                layers: L.mapquest.tileLayer('map'),
                zoom: 13
            });

            L.mapquest.directions().route({
                start: { street: '350 5th Ave', city: 'New York', state: 'NY', postalCode: '10118' },
                end: { street: 'One Liberty Plaza', city: 'New York', state: 'NY', postalCode: '10006' }
            });
        }
    </script>
</head>
<h2>Travel</h2>
<div class="container">
    <div class="col-lg-3">
        <div class="form-group">
            <label for="addressInput">Address</label>
            <input type="text" class="form-control" name="addressInput" id="addressInput" placeholder="1234 Somewhere St" />

            <label for="cityInput">City</label>
            <input type="text" class="form-control" name="cityInput" id="cityInput" placeholder="City Name" />

            <label for="stateInput">State</label>
            <input type="text" class="form-control" name="stateInput" id="stateInput" placeholder="Full or Abbreviation" />

            <label for="zipInput">Zip Code</label>
            <input type="text" class="form-control" name="zipInput" id="zipInput" placeholder="US Only" pattern="[0-9]{5}" />
            <br />
            <button type="submit" id="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
    <div class="travelResults" style="float:left;"></div>
</div>
<div style="border: 0; margin: 0;">
    <div id="map" style="width: 100%; height: 830px;"></div>
</div>

@section scripts{
    <script type="text/javascript" src="~/Scripts/TravelSearch.js"></script>
    <script type="text/javascript" src="~/Scripts/googleSearch.js"></script>
    <script src="https://api.mqcdn.com/sdk/mapquest-js/v1.3.1/mapquest.js"></script>
}

