
@{
    ViewBag.Title = "Search Form";
}

<body>
    <div class="img-fullpage" id="img-searchForm">
        <div class="searchFormBox">
            <div class="shiftDiv-Tinydown">
                <form method="post">
                    <div class="col-lg-6">
                        @*Input Field for School Name*@
                        <div class="form-group">
                            <label for="schoolNameInput" class="ccheader">School Name</label>
                            <input type="text" class="form-control" id="schoolNameInput" name="schoolNameInput" aria-describedby="nameHelp" placeholder="Enter School Name...">
                            <small id="nameHelp" class="form-text text-muted">You can enter the full name or a partial value.</small>
                        </div>


                        @*Selector for State*@
                        <div class="form-group">
                            <label for="stateInput" class="ccheader">Please Select a State</label>
                            <select class="form-control" id="stateInput" name="stateInput" required>
                                <option disabled selected> -- select an option -- </option>
                                <option value="Alabama AL">Alabama</option>
                                <option value="Alaska AK">Alaska</option>
                                <option value="American Samoa AS">American Samoa</option>
                                <option value="Arizona AZ">Arizona</option>
                                <option value="Arkansas AR">Arkansas</option>
                                <option value="California CA">California</option>
                                <option value="Colorado CO">Colorado</option>
                                <option value="Connecticut CT">Connecticut</option>
                                <option value="Delware DE">Delware</option>
                                <option value="District of Columbia DC">District of Columbia</option>
                                <option value="Federated States of Micronesia FM">Federated States of Micronesia</option>
                                <option value="Florida FL">Florida</option>
                                <option value="Georgia GA">Georgia</option>
                                <option value="Guam GU">Guam</option>
                                <option value="Hawaii HI">Hawaii</option>
                                <option value="Idaho ID">Idaho</option>
                                <option value="Illinois IL">Illinois</option>
                                <option value="Indiana IN">Indiana</option>
                                <option vlaue="Iowa IA">Iowa</option>
                                <option value="Kansas KS">Kansas</option>
                                <option value="Kentucky KY">Kentucky</option>
                                <option value="Louisiana LA">Louisiana</option>
                                <option value="Maine ME">Maine</option>
                                <option value="Maryland MD">Maryland</option>
                                <option value="Massachusetts MA">Massachusetts</option>
                                <option value="Michigan MI">Michigan</option>
                                <option value="Minnesota MN">Minnesota</option>
                                <option value="Mississippi MS">Mississippi</option>
                                <option value="Missouri MO">Missouri</option>
                                <option value="Montana MT">Montana</option>
                                <option value="Nebraska NE">Nebraska</option>
                                <option value="Nevada NV">Nevada</option>
                                <option value="New Hampshire NH">New Hampshire</option>
                                <option value="New Jersey NJ">New Jersey</option>
                                <option value="New Mexico NM">New Mexico</option>
                                <option value="New York NY">New York</option>
                                <option value="North Carolina NC">North Carolina</option>
                                <option value="North Dakota ND">North Dakota</option>
                                <option value="Marshall Islands MH">Marshall Islands</option>
                                <option value="Northern Mariana Islands MP">Northern Mariana Islands</option>
                                <option value="Ohio OH">Ohio</option>
                                <option value="Oklahoma OK">Oklahoma</option>
                                <option value="Oregon OR">Oregon</option>
                                <option value="Palau PW">Palau</option>
                                <option value="Pennsylvania PA">Pennsylvania</option>
                                <option value="Puerto Rico PR">Puerto Rico</option>
                                <option value="Rhode Island RI">Rhode Island</option>
                                <option value="South Carolina SC">South Carolina</option>
                                <option value="South Dakota SD">South DakotaS</option>
                                <option value="Tennessee TN">Tennessee</option>
                                <option value="Texas TX">Texas</option>
                                <option value="Utah UT">Utah</option>
                                <option value="Vermont VT">Vermont</option>
                                <option value="Virgin Islands VI">Virgin Islands</option>
                                <option value="Virginia VA">Virginia</option>
                                <option value="Washington WA">Washington</option>
                                <option value="West Virginia WV">West Virginia</option>
                                <option value="Wisconsin WI">Wisconsin</option>
                                <option value="Wyoming WY">Wyoming</option>
                            </select>
                        </div>

                        @*Input Field for City*@
                        @*This field is not controlled for numeric content because there are at least 8 cities in the US with only numbers for names!*@
                        <div class="form-group">
                            <label for="cityInput" class="ccheader">City</label>
                            <input type="text" class="form-control" id="cityInput" name="cityInput" aria-describedby="cityHelp" placeholder="Enter City Name...">
                            <small id="nameHelp" class="form-text text-muted">You can enter the full name or a partial value.</small>
                        </div>

                        @*Input Field for Degree / Major Desired*@
                        @*Note: This data is saved but not used in search criteria.*@
                        <div class="form-group">
                            <label for="degreeInput" class="ccheader">Desired Degree Focus</label>
                            <input type="text" class="form-control" id="degreeInput" name="degreeInput"  placeholder="Enter Degree Name...">
                        </div>
                    </div>

                    <div class="col-lg-6">
                        @*Input for Financial Limit*@
                        <div class="form-group">
                            <label for="finLimitInput" class="ccheader">Financial Limits</label>
                            <select class="form-control" id="finLimitInput" name="finLimitInput">
                                <option disabled selected> -- select an option -- </option>
                                <option value="10000">Less Than 10k</option>
                                <option value="20000">10k - 20k</option>
                                <option value="30000">20k - 30k</option>
                                <option value="40000">30k - 40k</option>
                                <option value="50000">40k - 50k</option>
                                <option value="60000">50k - 60k</option>
                            </select>
                        </div>

                        @*Input for Student Loan Acceptance Rate*@
                        <div class="form-group">
                            <label for="acceptRateInput" class="ccheader">Student Loan Acceptance Rate</label>
                            <input type="text" pattern="[0-9]{2}" class="form-control" id="acceptRateInput" name="acceptRateInput" aria-describedby="acceptHelp" placeholder="Ex: 70">
                            <small id="acceptHelp" class="form-text text-muted">Please enter numeric values with no percent sign.</small>
                        </div>

                        @*Input for Accreditor*@
                        <div class="form-group">
                            <label for="accreditorInput" class="ccheader">Accreditor</label>
                            <input type="text" pattern="[a-zA-Z0-9]+" class="form-control" id="accreditorInput" name="accreditorInput" aria-describedby="accredHelp" placeholder="Enter Accreditor Name...">
                            <small id="accredHelp" class="form-text text-muted">You can enter the full name or a partial value.</small>
                        </div>
                        @*Error Msg for School Name*@
                        <div class="invalid-feedback">
                        </div>

                        @*Selector for Ownership*@
                        <div class="form-group">
                            <label for="ownershipInput" class="ccheader">Please Select Ownership Type</label>
                            <select class="form-control" id="stateInput" name="stateInput">
                                <option disabled selected> -- select an option -- </option>
                                <option value="1">Public</option>
                                <option value="2">Private, Non-Profit</option>
                                <option value="3">Private, For-Profit</option>
                            </select>
                        </div>
                    </div>

                    @*Error Msg for School Name*@
                    <div id="feedbackNoInput" class="warning text-center">
                    </div>

                    @**Submit Button*@
                    <div class="ccheader">
                        <div class="text-right" id="errorHandler">
                            <button type="submit" id="submit" class="btn btn-primary mb-2">Find Colleges!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section scripts{
    <script type="text/javascript" src="~/Scripts/FormSearch.js"></script>
}