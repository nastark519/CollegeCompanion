@model collegeCompanionApp.Models.ViewModel.FormDataViewModel
@{
    ViewBag.Title = "Search Form";
}
<body>
    <div class="img-fullpage" id="img-searchForm">
        <div class="searchFormBox">
            <div class="shiftDiv-Tinydown">
                <form>
                    <div class="col-lg-6">
                        @*Input Field for School Name*@
                        <div class="form-group">
                            <label for="schoolNameInput" class="ccheader">School Name</label>
                            <input type="text" class="form-control" id="schoolNameInput" name="schoolNameInput" aria-describedby="nameHelp" placeholder="Enter School Name...">
                            <small id="nameHelp" class="form-text text-muted">You can enter the full name or a partial value.</small>
                        </div>

                        @*Selector for State*@
                        @*Create a c# list and gernerate the options in Razor*@
                        <div class="form-group">
                            <label for="stateInput" class="ccheader">Please Select a State</label>
                            <select class="form-control" id="stateInput" name="stateInput" required>
                                <option disabled selected> -- select an option -- </option>
                                @foreach (var item in Model.StateList)
                                {
                                    <option value="@item.QueryName">@item.Name)</option>
                                }
                            </select>
                        </div>
                        @*Input Field for City*@
                        @*This field is not controlled for numeric content because there are at least 8 cities in the US with only numbers for names!*@
                        <div class="form-group">
                            <label for="cityInput" class="ccheader">City</label>
                            <input type="text" class="form-control" id="cityInput" name="cityInput" aria-describedby="cityHelp" placeholder="Enter City Name...">
                            <small id="nameHelp" class="form-text text-muted">You can enter the full name or a partial value.</small>
                        </div>
                        @*Input Field for Degree / Major Desired*@
                        @*Note: This data is saved but not used in search criteria.*@
                        <div class="form-group">
                            <label for="degreeInput" class="ccheader">Desired Degree Focus</label>
                            <input type="text" class="form-control" id="degreeInput" name="degreeInput" placeholder="Enter Degree Name...">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        @*Input for Financial Limit*@
                        <div class="form-group">
                            <label for="finLimitInput" class="ccheader">Financial Limits</label>
                            <select class="form-control" id="finLimitInput" name="finLimitInput">
                                <option disabled selected> -- select an option -- </option>
                                @foreach (var item in Model.FinLimitList)
                                {
                                <option value="@item.UpperLimit">@item.LowerLimit - @item.UpperLimit</option>
                                 }
                            </select>
                        </div>
                        @*Input for Student Loan Acceptance Rate*@
                        <div class="form-group">
                            <label for="acceptRateInput" class="ccheader">Student Loan Acceptance Rate</label>
                            <input type="text" pattern="[0-9]{2}" class="form-control" id="acceptRateInput" name="acceptRateInput" aria-describedby="acceptHelp" placeholder="Ex: 70">
                            <small id="acceptHelp" class="form-text text-muted">Please enter numeric values with no percent sign.</small>
                        </div>
                        @*Input for Accreditor*@
                        <div class="form-group">
                            <label for="accreditorInput" class="ccheader">Accreditor</label>
                            <input type="text" pattern="[a-zA-Z0-9]+" class="form-control" id="accreditorInput" name="accreditorInput" aria-describedby="accredHelp" placeholder="Enter Accreditor Name...">
                            <small id="accredHelp" class="form-text text-muted">You can enter the full name or a partial value.</small>
                        </div>
                        @*Error Msg for School Name*@
                        <div class="invalid-feedback">
                        </div>
                        @*Selector for Ownership*@
                        <div class="form-group">
                            <label for="ownershipInput" class="ccheader">Please Select Ownership Type</label>
                            <select class="form-control" id="stateInput" name="stateInput">
                                <option disabled selected> -- select an option -- </option>
                                @foreach (var item in Model.PrivacyList)
                                 {
                                     <option value="@item.PrivacyNumber">@item..PrivacyType</option>
                                 }
                            </select>
                        </div>
                    </div>

                    @**Submit Button*@
                    <div class="ccheader">
                        <div class="text-right">
                            <button type="submit" id="submit" class="btn btn-primary mb-2">Find Colleges!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
